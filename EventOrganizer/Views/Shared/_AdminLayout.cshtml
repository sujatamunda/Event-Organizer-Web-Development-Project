@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #fff;
            padding: 20px;
            color: #000;
            border-right: 2px solid #ddd;
            transition: all 0.3s ease;
        }

            .sidebar.collapsed {
                width: 80px;
                padding: 10px 5px;
            }

                .sidebar.collapsed .nav-link span {
                    display: none;
                }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .dropdown-item:hover {
                    background-color: #f1f1f1;
                    color: #000;
                    border-radius: 5px;
                }

        .dark-mode {
            background-color: #1e3c72 !important;
            color: white !important;
        }

            .dark-mode .sidebar {
                background-color: #2c2c2c !important;
                color: white !important;
                border-right: 1px solid #444;
            }

                .dark-mode .sidebar .nav-link {
                    color: #ccc;
                }

                    .dark-mode .sidebar .nav-link:hover {
                        background-color: #444;
                        color: #fff;
                    }

        .toggle-btn {
            cursor: pointer;
        }

        .profile-img {
            width: 60px;
            height: 60px;
        }

        .sidebar .nav-link i {
            margin-right: 10px;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
            display: block;
            text-align: center;
        }
    </style>
</head>
<body class="bg-light">

    @inject IHttpContextAccessor HttpContextAccessor
    @{
        var userType = HttpContextAccessor.HttpContext.Session.GetString("UserType");
        if (string.IsNullOrEmpty(userType) || userType != "Admin")
        {
            Context.Response.Redirect("/Login/Index");
        }

        Context.Response.Headers["Cache-Control"] = "no-cache, no-store, must-revalidate";
        Context.Response.Headers["Pragma"] = "no-cache";
        Context.Response.Headers["Expires"] = "-1";
    }

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary px-4 fixed-top d-flex justify-content-between">
        <div>
            <span class="navbar-brand toggle-btn me-3" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </span>
            <a class="navbar-brand" href="#">EventOrganizer</a>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="text-white">Welcome, @HttpContextAccessor.HttpContext.Session.GetString("UserFullName")</span>
            <i class="bi bi-moon-stars-fill toggle-btn fs-5 text-white" onclick="toggleDarkMode()" title="Toggle Dark Mode"></i>
            <a href="@Url.Action("Logout", "Login")" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
    </nav>

    <div class="mb-5"></div>

    <!-- Sidebar + Content -->
    <div class="d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar">
            <div class="text-center mb-3">
                <img src="~/images/Profile.jpeg" class="rounded-circle profile-img" alt="User Profile">
            </div>
            <h5 class="text-center mb-4">Admin</h5>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> <span>Dashboard</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("BookingList", "Admin")"><i class="bi bi-card-list"></i> <span>Booking List</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("PendingBookings", "Admin")"><i class="bi bi-hourglass-split"></i> <span>Pending</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("CurrentBookings", "Admin")"><i class="bi bi-calendar-check"></i> <span>Current</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("BookingHistory", "Admin")"><i class="bi bi-clock-history"></i> <span>History</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Venues", "Admin")"><i class="bi bi-building"></i> <span>Venues</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("VenueList", "Admin")"><i class="bi bi-geo-alt"></i> <span>Venue List</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Events", "Admin")"><i class="bi bi-calendar-event"></i> <span>Events</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("EventList", "Admin")"><i class="bi bi-list-ul"></i> <span>Event List</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Services", "Admin")"><i class="bi bi-wrench-adjustable"></i> <span>Services</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ServiceList", "Admin")"><i class="bi bi-gear-fill"></i> <span>ServiceList</span></a></li>

                <li class="nav-item"><a class="nav-link" href="@Url.Action("UserList", "Admin")"><i class="bi bi-people"></i> <span>Users</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("PaymentList", "Admin")"><i class="bi bi-cash-coin"></i> <span>Payments</span></a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ReviewList", "Admin")"><i class="bi bi-people"></i> <span>Reviews</span></a></li>

            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        }

        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
        }
    </script>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script type="text/javascript">
            function approveReview(reviewId) {
                $.ajax({
                    url: '/Admin/ApproveReview',  // ✅ Use correct controller
                    type: 'POST',
                    data: { reviewId: reviewId },
                    success: function (response) {
                        alert("Review Approved!");
                        location.reload();  // Optional: refresh page
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);  // ✅ Show detailed error
                        alert("Error in approving review.");
                    }
                });
            }
        </script>
    }

    }


    @RenderSection("Scripts", required: false)
</body>
</html>
