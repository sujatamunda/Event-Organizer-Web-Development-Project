<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Event Organizer</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <!-- jQuery and Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: url('../../Images/bg-login-image.jpg') no-repeat center center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            overflow: hidden;
        }

        .login-container {
            width: 380px;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 2.5rem 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-in-out;
        }

        .gradient-btn {
            background: linear-gradient(to right, #7b42f6, #b01eff);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 30px;
            font-weight: bold;
            font-size: 16px;
            transition: 0.3s;
        }

            .gradient-btn:hover {
                background: linear-gradient(to right, #b01eff, #7b42f6);
                transform: scale(1.05);
            }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            font-size: 16px;
        }

            .form-control:focus {
                border-color: #7b42f6;
                box-shadow: 0 0 0 0.2rem rgba(123, 66, 246, 0.3);
            }

        .logo-img {
            width: 120px;
            height: auto;
            margin-bottom: 1rem;
            border-radius: 10px;
        }

        .field-icon {
            font-size: 18px;
            color: #6c757d;
            cursor: pointer;
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
        }

        a {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.7);
        }

            a:hover {
                color: white;
                text-decoration: underline;
            }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>

    <!-- Login Card -->
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card login-container text-center">
            @RenderBody()
        </div>
    </div>

</body>
</html>
