@model EventOrganizer.Models.Events

@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white p-2">
                    <h6 class="mb-0">Add New Event</h6>
                </div>
                <div class="card-body p-3">
                    @using (Html.BeginForm("Events", "Admin", FormMethod.Post))
                    {
                        <div class="mb-2 text-start">
                            <label for="EventName" class="form-label text-dark">Event Name</label>
                            @Html.TextBoxFor(m => m.EventName, new { @class = "form-control form-control-sm", placeholder = "Enter Event Name" })
                        </div>

                        <div class="mb-2 text-start">
                            <label for="Description" class="form-label text-dark">Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-sm", rows = "2", placeholder = "Enter Description" })
                        </div>


                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-success btn-sm">Add Event</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
