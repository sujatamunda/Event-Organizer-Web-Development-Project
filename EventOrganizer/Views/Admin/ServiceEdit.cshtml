@model EventOrganizer.Models.Services

@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h6>Edit Service</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("ServiceEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.ServiceId)

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Service Name</label>
                            @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.ServiceName, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4" })
                            @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Cost</label>
                            @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                            @Html.ValidationMessageFor(m => m.Cost, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Upload Image</label>
                            @Html.TextBoxFor(m => m.ImageFile, new { @type = "file", @class = "form-control", accept = "image/*" })
                            @Html.ValidationMessageFor(m => m.ImageFile, null, new { @class = "text-danger" })
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="form-group mb-3">
                                <label class="form-label text-dark">Current Image:</label><br />
                                <img src="@Model.ImageUrl" alt="Service Image" width="150" class="img-thumbnail" />
                            </div>

                            <!-- ✅ Hidden input to preserve the image URL -->
                            <input type="hidden" name="ExistingImageUrl" value="@Model.ImageUrl" />
                        }

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success">Update Service</button>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMsg))
                        {
                            <div class="alert alert-success mt-3">@ViewBag.SuccessMsg</div>
                        }

                        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMsg))
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.ErrorMsg</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
