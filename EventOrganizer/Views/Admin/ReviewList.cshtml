@model List<EventOrganizer.Models.Reviews>

@{
    ViewData["Title"] = "ReviewList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin - Reviews</h2>

<table class="table">
    <thead>
        <tr>
            <th>Review ID</th>
            <th>User ID</th>
            <th>Event ID</th>
            <th>Review Text</th>
            <th>Rating</th>
            <th>Created At</th>
            <th>Venue ID</th>
            <th>Service ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ReviewId</td>
                <td>@review.UserId</td>
                <td>@review.EventId</td>
                <td>@review.ReviewText</td>
                <td>@review.Rating</td>
                <td>@review.CreatedAt</td>
                <td>@review.VenueId</td>
                <td>@review.ServiceId</td>
                <td>
                    <button class="btn btn-success btn-sm" onclick="approveReview(@review.ReviewId)">Approve</button>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function approveReview(reviewId) {
            $.ajax({
                url: '/Admin/ApproveReview', // ✅ Correct controller
                type: 'POST',
                data: { reviewId: reviewId },
                success: function (response) {
                    alert("Review Approved!");
                    location.reload();
                },
                error: function (xhr) {
                    console.log(xhr.responseText);
                    alert("Error in approving review.");
                }
            });
        }
    </script>
}




