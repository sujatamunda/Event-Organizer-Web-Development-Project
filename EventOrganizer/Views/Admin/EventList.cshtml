@model List<EventOrganizer.Models.Events>

@{
    ViewData["Title"] = "Events List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-dark text-center">
        <h4 class="mb-0">Events List</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
@*             <thead class="table-light">
 *@                <tr>
                    <th>Event Name</th>
                    <th>Description</th>
                   
                    <th>Actions</th>
                </tr>
@*             </thead>
 *@            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EventName</td>
                        <td>@item.Description</td>
                        
                        <td>
                            <a href="@Url.Action("EventEdit", "Admin", new { id = item.EventId })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("EventDelete", "Admin", new { id = item.EventId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
