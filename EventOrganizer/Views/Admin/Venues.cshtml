@model EventOrganizer.Models.Venues

@{
    ViewData["Title"] = "Venues";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-3 text-white text-center">Add New Venue</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Venues", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(a => a.VenueId)

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Venue Name</label>
                            @Html.TextBoxFor(a => a.VenueName, new { @class = "form-control", placeholder = "Enter Venue Name", required = "required" })
                            @Html.ValidationMessageFor(a => a.VenueName, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Location</label>
                            @Html.TextBoxFor(a => a.Location, new { @class = "form-control", placeholder = "Enter Location", required = "required" })
                            @Html.ValidationMessageFor(a => a.Location, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Capacity</label>
                            @Html.TextBoxFor(a => a.Capacity, new { @class = "form-control", placeholder = "Enter Capacity", required = "required" })
                            @Html.ValidationMessageFor(a => a.Capacity, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Cost</label>
                            @Html.TextBoxFor(a => a.Cost, new { @class = "form-control", placeholder = "Enter Cost", required = "required" })
                            @Html.ValidationMessageFor(a => a.Cost, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-dark">Venue Image</label>
                            <input type="file" name="ImageFile" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-success btn-sm">Add Venue</button>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMsg))
                        {
                            <div class="mt-3 bg-success text-white p-2">@ViewBag.SuccessMsg</div>
                        }
                        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMsg))
                        {
                            <div class="mt-3 bg-danger text-white p-2">@ViewBag.ErrorMsg</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
