@model ContactModel

<!-- Hero Section -->
<div class="container-fluid bg-light py-5 mb-5">
    <div class="container text-center wow fadeInDown">
        <h1 class="display-1 mb-3 text-primary">Contact Us</h1>
        <nav>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="breadcrumb-item active text-dark">Contact</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Contact Start -->
<div class="container-fluid contact py-6 wow bounceInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="p-5 bg-light rounded contact-form">
            <div class="row g-4">
                <div class="col-12">
                    <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Get in touch</small>
                    <h1 class="display-5 mb-0">Contact Us For Any Queries!</h1>
                </div>

                <div class="col-md-6 col-lg-7">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <p class="mb-4">Feel free to send us a message!</p>

                    <form asp-action="Contact" method="post">
                        <!-- If the user is logged in, pre-fill their Name and Email, else leave them blank -->
                        <input type="text" class="w-100 form-control p-3 mb-4 border-primary bg-light"
                               value="@ViewBag.UserName" placeholder="Your Name"
                        @(string.IsNullOrEmpty(ViewBag.UserName) ? "" : "disabled")>

                        <input type="email" class="w-100 form-control p-3 mb-4 border-primary bg-light"
                               value="@ViewBag.UserEmail" placeholder="Enter Your Email"
                        @(string.IsNullOrEmpty(ViewBag.UserEmail) ? "" : "disabled")>

                        <textarea asp-for="Message" class="w-100 form-control mb-4 p-3 border-primary bg-light" rows="4" cols="10" placeholder="Your Message"></textarea>

                        <input type="hidden" name="UserId" value="@ViewBag.UserId" /> <!-- Hidden field for UserId -->

                        <button class="w-100 btn btn-primary form-control p-3 border-primary bg-primary rounded-pill" type="submit">Submit Now</button>
                    </form>
                </div>

                <div class="col-md-6 col-lg-5">
                    <div>
                        <div class="d-inline-flex w-100 border border-primary p-4 rounded mb-4">
                            <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Address</h4>
                                <p>Sambalpur, Odisha, India</p>
                            </div>
                        </div>
                        <div class="d-inline-flex w-100 border border-primary p-4 rounded mb-4">
                            <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Mail Us</h4>
                                <p class="mb-2">sujata@gmail.com</p>
                                <p class="mb-0">support@gmail.com</p>
                            </div>
                        </div>
                        <div class="d-inline-flex w-100 border border-primary p-4 rounded">
                            <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                            <div>
                                <h4>Telephone</h4>
                                <p class="mb-2">9965887456</p>
                                <p class="mb-0">7896654214</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
