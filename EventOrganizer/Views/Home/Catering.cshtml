<!-- Hero Section -->
<div class="hero-section text-center bg-gradient-to-b from-indigo-600 to-purple-700 text-white py-24 md:py-32">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4">Delicious Catering for Every Occasion</h1>
    <p class="text-xl md:text-2xl mb-8">Experience world-class catering with customized menus for every event</p>
    <a href="#catering-menu" class="btn bg-white text-purple-700 font-bold px-8 py-3 rounded-full shadow-lg transition transform hover:scale-105">Explore Our Menu</a>
</div>

<!-- Catering Menu Section -->
<div id="catering-menu" class="container my-16">
    <h2 class="text-center text-4xl md:text-5xl font-bold mb-12">Popular Catering Options</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card shadow-lg rounded-2xl overflow-hidden transition transform hover:scale-105">
            <img src="~/Images/veg.jpg" class="card-img-top" alt="Vegetarian Cuisine">
            <div class="p-6 bg-white">
                <h5 class="text-2xl font-bold mb-2">Vegetarian Delights</h5>
                <span class="bg-green-600 text-white py-1 px-3 rounded-full text-sm mb-2 inline-block">Veg Only</span>
                <p class="text-gray-700 mb-4">Enjoy a variety of freshly prepared, wholesome vegetarian dishes.</p>
                <a href="#inquiry" class="btn bg-purple-700 text-white w-full py-2 rounded-lg transition transform hover:bg-purple-600">Inquire Now</a>
            </div>
        </div>
        <div class="card shadow-lg rounded-2xl overflow-hidden transition transform hover:scale-105">
            <img src="~/Images/nonveg.jpg" class="card-img-top" alt="Non-Vegetarian Cuisine">
            <div class="p-6 bg-white">
                <h5 class="text-2xl font-bold mb-2">Non-Vegetarian Feasts</h5>
                <span class="bg-red-600 text-white py-1 px-3 rounded-full text-sm mb-2 inline-block">Non-Veg Only</span>
                <p class="text-gray-700 mb-4">From tender grills to spicy curries, indulge in rich non-vegetarian flavors.</p>
                <a href="#inquiry" class="btn bg-purple-700 text-white w-full py-2 rounded-lg transition transform hover:bg-purple-600">Inquire Now</a>
            </div>
        </div>
        <div class="card shadow-lg rounded-2xl overflow-hidden transition transform hover:scale-105">
            <img src="~/Images/mixedplatter.jpg" class="card-img-top" alt="Mixed Cuisine">
            <div class="p-6 bg-white">
                <h5 class="text-2xl font-bold mb-2">Mixed Platters</h5>
                <span class="bg-yellow-600 text-white py-1 px-3 rounded-full text-sm mb-2 inline-block">Veg & Non-Veg</span>
                <p class="text-gray-700 mb-4">A perfect balance of vegetarian and non-vegetarian delicacies.</p>
                <a href="#inquiry" class="btn bg-purple-700 text-white w-full py-2 rounded-lg transition transform hover:bg-purple-600">Inquire Now</a>
            </div>
        </div>
    </div>
</div>

<!-- Inquiry Form Section -->
<div id="inquiry" class="container my-16">
    <h2 class="text-center text-4xl md:text-5xl font-bold mb-12">Inquire About Our Catering Services</h2>
    <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <label for="name" class="block font-semibold">Full Name</label>
                <input type="text" class="form-control rounded-lg p-3" id="name" placeholder="Enter your name" required>
            </div>
            <div>
                <label for="email" class="block font-semibold">Email Address</label>
                <input type="email" class="form-control rounded-lg p-3" id="email" placeholder="Enter your email" required>
            </div>
        </div>
        <div>
            <label for="menu-type" class="block font-semibold">Preferred Menu Type</label>
            <select class="form-control rounded-lg p-3" id="menu-type">
                <option>Vegetarian Delights (Veg Only)</option>
                <option>Non-Vegetarian Feasts (Non-Veg Only)</option>
                <option>Mixed Platters (Veg & Non-Veg)</option>
            </select>
        </div>
        <div>
            <label for="message" class="block font-semibold">Message</label>
            <textarea class="form-control rounded-lg p-3" id="message" rows="4" placeholder="Tell us more about your catering needs"></textarea>
        </div>
        <button type="submit" class="btn bg-purple-700 text-white w-full py-3 text-lg font-bold rounded-lg transition transform hover:bg-purple-600">Submit Inquiry</button>
    </form>
</div>
