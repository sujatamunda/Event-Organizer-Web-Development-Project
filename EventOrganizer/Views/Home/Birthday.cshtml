@* <!-- Countdown Timer Section -->
<div class="container py-5 text-center">
    <h2 class="mb-4 text-primary">🎈 Countdown to the Big Day! 🎁</h2>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div id="countdown" class="d-flex justify-content-around p-4 rounded shadow bg-light">
                <div>
                    <h3 id="days" class="text-danger">00</h3>
                    <p>Days</p>
                </div>
                <div>
                    <h3 id="hours" class="text-danger">00</h3>
                    <p>Hours</p>
                </div>
                <div>
                    <h3 id="minutes" class="text-danger">00</h3>
                    <p>Minutes</p>
                </div>
                <div>
                    <h3 id="seconds" class="text-danger">00</h3>
                    <p>Seconds</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Countdown Timer Script -->
<script>
    // Set your party date/time here
    var partyDate = new Date("June 10, 2025 18:00:00").getTime();

    var countdownFunction = setInterval(function () {
        var now = new Date().getTime();
        var timeLeft = partyDate - now;

        var days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        var hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;

        if (timeLeft < 0) {
            clearInterval(countdownFunction);
            document.getElementById("countdown").innerHTML =
                "<h3 class='text-success'>🎉 The party has started! 🎉</h3>";
        }
    }, 1000);
</script>
