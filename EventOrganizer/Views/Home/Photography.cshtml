<section class="hero text-center">
    <div class="container">
        <h1 class="display-4">Capture Every Moment</h1>
        <p class="lead">Professional Photography for Every Occasion</p>
        <a href="#contact" class="btn btn-primary btn-lg">Book a Session</a>
    </div>
</section>

<!-- Services -->
<section class="services py-5 text-center">
    <div class="container">
        <h2 class="mb-4">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <i class="bi bi-camera"></i>
                <h5 class="mt-2">Wedding Photography</h5>
                <p>Memories that last a lifetime, captured beautifully.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-camera-video"></i>
                <h5 class="mt-2">Event Coverage</h5>
                <p>Complete photography & videography for events and parties.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-person-bounding-box"></i>
                <h5 class="mt-2">Portraits & Studio</h5>
                <p>Creative studio shoots for individuals and families.</p>
            </div>
        </div>
    </div>
</section>

<!-- Gallery -->
<section class="gallery py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Gallery</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <img src="~/Images/photocamera.jpg" class="img-fluid rounded" alt="Gallery Image">
            </div>
            <div class="col-md-4">
                <img src="~/Images/videocamera.jpg" class="img-fluid rounded" alt="Gallery Image">
            </div>
            <div class="col-md-4">
                <img src="~/Images/potrait.jpeg" class="img-fluid rounded" alt="Gallery Image">
            </div>
        </div>
    </div>
</section>

