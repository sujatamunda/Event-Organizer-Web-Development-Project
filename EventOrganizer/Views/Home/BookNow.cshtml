<div class="container-fluid contact py-6 wow bounceInUp" data-wow-delay="0.1s">
    <div class="row g-0">
        <div class="col-1">
            <img src="/Images/image9.jpg" class="img-fluid h-100 w-100 rounded-start" style="object-fit: cover; opacity: 0.7;" alt="Background">
        </div>

        <div class="col-md-10 p-5" style="background: linear-gradient(135deg, #f0f0f0, #ffffff); border-radius: 10px;">
            <div class="text-center mb-4">
                <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Book Us</small>
                <h1 class="display-5 mb-4">Where you want Our Services</h1>
            </div>

            <form>
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Select Service</option>
                            <option>Corporate event</option>
                            <option>Destination Wedding</option>
                            <option>Catering services</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Select City</option>
                            <option>Bhubneshwar</option>
                            <option>Rourkela</option>
                            <option>Sambalpur</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Select Venue</option>
                            <option>Galaxy Convention</option>
                            <option>Dolphin Garden</option>
                            <option>Gopabandhu Kalyan Mandap</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Event Type</option>
                            <option>Big Event</option>
                            <option>Small Event</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Capacity</option>
                            <option>100-200</option>
                            <option>300-400</option>
                            <option>500-600</option>
                            <option>700-800</option>
                            <option>900-1000</option>
                            <option>1000+</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <select class="form-select border-primary p-2">
                            <option selected>Equipment Requirement</option>
                            <option>Sound System</option>
                            <option>Stage & Lighting</option>
                            <option>Projector & Screen</option>
                            <option>Photography & Videography</option>
                            <option>Air Conditioning / Coolers</option>
                            <option>Custom (Specify in Comments)</option>
                        </select>
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <input type="text" class="form-control border-primary p-2" placeholder="Your Contact No.">
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <input type="date" class="form-control border-primary p-2">
                    </div>

                    <div class="col-lg-4 col-md-6">
                        <input type="email" class="form-control border-primary p-2" placeholder="Enter Your Email">
                    </div>

                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary px-5 py-3 rounded-pill">Submit Now</button>
                    </div>
                </div>
                       </form>
        </div>

        <div class="col-md-1 d-none d-md-block">
            <img src="~/Images/image9.jpg" class="img-fluid h-100 w-100 rounded-end" style="object-fit: cover; opacity: 0.7;" alt="">
        </div>
    </div>
</div>

