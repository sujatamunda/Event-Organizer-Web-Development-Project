@model EventOrganizer.Models.UserViewModel

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body text-center bg-primary text-white rounded-top py-2">
                <h6 class="mb-2">Update Profile</h6>
            </div>
            <div class="card-body p-3">
                @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post))
                {
                    <div class="mb-2">
                        <label class="form-label mb-1">First Name</label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-sm", @required = "required" })
                    </div>

                    <div class="mb-2">
                        <label class="form-label mb-1">Last Name</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-sm", @required = "required" })
                    </div>

                    <div class="mb-2">
                        <label class="form-label mb-1">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm", @type = "email", @required = "required" })
                    </div>

                    <hr />
                    <h6 class="text-muted mb-2">Change Password (Optional)</h6>

                    <div class="mb-2">
                        <label class="form-label mb-1">Current Password</label>
                        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control form-control-sm" })
                    </div>

                    <div class="mb-2">
                        <label class="form-label mb-1">New Password</label>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-sm" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label mb-1">Confirm New Password</label>
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control form-control-sm" })
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success btn-sm w-50">Update Profile</button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMsg))
                    {
                        <div class="alert alert-danger mt-2 text-center">@ViewBag.ErrorMsg</div>
                    }

                    @if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMsg))
                    {
                        <div class="alert alert-success mt-2 text-center">@ViewBag.SuccessMsg</div>
                    }
                }
            </div>
        </div>
    </div>
</div>
